#include <stdio.h>

int main()
{

    int a, b;
    char c;
    printf("첫 번째 정수 입력");
    scanf("%d", &a);

    printf("+, -, X, /");
    scanf(" %c", &c);

    printf("두 번째 정수 입력");
    scanf("%d", &b);

    if (c == '+')
        printf("%d", a + b);

    else if (c == '-')
        printf("%d", a - b);

    else if (c == 'X' || c == 'x')
        printf("%d", a * b);

    else if (c == '/')
        printf("%d", a / b);
    else

        printf("false");
}
